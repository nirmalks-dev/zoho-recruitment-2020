#include <stdio.h>

int main()
{
    int r, c, i, j;
    printf("Enter n: ");
    scanf("%d", &r);
    c=r;

    for(i=1; i<=r; i++)
    {
        for(j=c; j>c-i; j--)
        {
            printf("%d", j);
        }

        for(j=1; j<=c-i; j++)
        {
            printf("%d", (r - i + 1));
        }

        printf("\n");
    }

    return 0;
}
